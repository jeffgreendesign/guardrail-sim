{
  "name": "@guardrail-sim/insights",
  "version": "0.2.0",
  "description": "Policy insights, health checks, and best practice recommendations for guardrail-sim",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jeffgreendesign/guardrail-sim.git",
    "directory": "packages/insights"
  },
  "keywords": [
    "guardrail-sim",
    "policy",
    "insights",
    "best-practices",
    "b2b-commerce"
  ],
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "pretest": "tsc",
    "test": "node --test --experimental-strip-types test/*.test.ts",
    "test:coverage": "c8 --reporter=text --reporter=lcov node --test --experimental-strip-types test/*.test.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@guardrail-sim/policy-engine": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "c8": "^10.1.3",
    "typescript": "^5.7.2"
  }
}
