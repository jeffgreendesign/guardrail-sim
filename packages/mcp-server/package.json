{
  "name": "@guardrail-sim/mcp-server",
  "version": "0.2.0",
  "description": "MCP server exposing evaluate_policy tool for AI agents",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "guardrail-mcp": "./dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jeffgreendesign/guardrail-sim.git",
    "directory": "packages/mcp-server"
  },
  "keywords": [
    "guardrail-sim",
    "mcp",
    "model-context-protocol",
    "ai-agents",
    "pricing",
    "policy"
  ],
  "license": "MIT",
  "scripts": {
    "build": "tsc -b",
    "dev": "tsc -b --watch",
    "start": "node dist/index.js",
    "test": "node --test --experimental-strip-types test/*.test.ts",
    "test:coverage": "c8 --reporter=text --reporter=lcov node --test --experimental-strip-types test/*.test.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@guardrail-sim/policy-engine": "workspace:*",
    "@guardrail-sim/ucp-types": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.25.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "typescript": "^5.7.2"
  }
}
