{
  "name": "@guardrail-sim/ucp-types",
  "version": "0.2.0",
  "description": "UCP (Universal Commerce Protocol) type definitions for guardrail-sim",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./discount": {
      "types": "./dist/discount.d.ts",
      "import": "./dist/discount.js"
    },
    "./checkout": {
      "types": "./dist/checkout.d.ts",
      "import": "./dist/checkout.js"
    },
    "./converters": {
      "types": "./dist/converters.d.ts",
      "import": "./dist/converters.js"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jeffgreendesign/guardrail-sim.git",
    "directory": "packages/ucp-types"
  },
  "homepage": "https://github.com/jeffgreendesign/guardrail-sim/tree/main/packages/ucp-types",
  "bugs": {
    "url": "https://github.com/jeffgreendesign/guardrail-sim/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "ucp",
    "universal-commerce-protocol",
    "agentic-commerce",
    "shopify",
    "google",
    "discount",
    "checkout"
  ],
  "license": "MIT",
  "scripts": {
    "build": "tsc -b",
    "dev": "tsc -b --watch",
    "test": "tsc && node --test --experimental-strip-types test/*.test.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@guardrail-sim/policy-engine": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.7.2",
    "@types/node": "^22.10.5"
  }
}
