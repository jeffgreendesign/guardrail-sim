{
  "name": "@guardrail-sim/policy-engine",
  "version": "0.2.1",
  "description": "Deterministic policy evaluation engine using json-rules-engine for AI pricing governance",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jeffgreendesign/guardrail-sim.git",
    "directory": "packages/policy-engine"
  },
  "homepage": "https://github.com/jeffgreendesign/guardrail-sim/tree/main/packages/policy-engine",
  "bugs": {
    "url": "https://github.com/jeffgreendesign/guardrail-sim/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "guardrail-sim",
    "policy-engine",
    "json-rules-engine",
    "pricing",
    "b2b-commerce",
    "ai-governance"
  ],
  "license": "MIT",
  "scripts": {
    "build": "tsc -b",
    "dev": "tsc -b --watch",
    "test": "tsc && node --test --experimental-strip-types test/*.test.ts",
    "test:coverage": "tsc && c8 --reporter=text --reporter=lcov node --test --experimental-strip-types test/*.test.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "json-rules-engine": "^7.3.1"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "c8": "^10.1.3",
    "typescript": "^5.7.2"
  }
}
